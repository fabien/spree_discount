<%= f.field_container :pre_discount_price do %>
  <%= f.label :pre_discount_price, t("pre_discount_price")%><br />
  <%= f.text_field :pre_discount_price, :value => number_with_precision(@product.pre_discount_price, :precision => 2) %>
  <%= f.error_message_on :pre_discount_price %>
<% end %>
<%= f.field_container :discount_percentage do %>
  <%= f.label :discount_percentage, t("discount_percentage")%><br />
  <%= f.select(:discount_percentage, (0..20).map { |i| ["#{((i/2.0)*10).to_i}%", ((i/2.0)*10).to_i] }, {}, { :style => 'width: 200px' }) %>
  <%= f.error_message_on :discount_percentage %>
<% end %>